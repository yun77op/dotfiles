[alias]
	b = branch
	ci = commit -v
	cia = commit -v -a
	cm = commit -m
	co = checkout
	cp = cherry-pick
	cr = clone --recursive
	d = diff
	l = log
	lc = log -p -n1
	ll = log --abbrev-commit --date=short --pretty=format:"%h | %cd | %an | %s"
	master = checkout master
	msg = commit --allow-empty -m
	pullall = !git pull && git submodule update --init --recursive
	rollback = checkout --
	st = status -sb
	vis = !gitk --all &

[apply]
  whitespace = nowarn

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	excludesfile = <%= ENV['HOME'] %>/.global_ignore
	editor = vim
	pager = "less -RciqMSj5"
	whitespace = fix,-indent-with-non-tab,trailing-space,cr-at-eol

[credential]
  helper = cache --timeout=3600

[format]
	pretty = %C(yellow)%h%Creset %s

[github]
	user = <%= print("Your Github Name: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("Your Github Token: "); STDOUT.flush; STDIN.gets.chomp %>

[user]
  name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
  email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>

