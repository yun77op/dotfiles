[user]
	name = <%= print("Your Name: "); STDOUT.flush; STDIN.gets.chomp %>
	email = <%= print("Your Email: "); STDOUT.flush; STDIN.gets.chomp %>

[alias]  
	b = branch
	ci = commit -v
	cia = commit -v -a
	co = checkout
	cp = cherry-pick
	d = diff
	l = log
	ll = log -p
	lt = log trunk..
	llt = log -p trunk..
	lm = log master..
	llm = log -p master..
	msg = commit --allow-empty -m
	st = status
	vis = !gitk --all &

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green

[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold

[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[core]
	excludesfile = <%= ENV['HOME'] %>/.global_ignore
	editor = <%= (`command -v vim` && $?.exitstatus==0 ? `which vim` : `which vi`).chomp %>
	pager = "less -RciqMSj5"
	whitespace=fix,-indent-with-non-tab,trailing-space,cr-at-eol

[format]
	pretty = %C(yellow)%h%Creset %s
  
[apply]
	whitespace = nowarn

[github]
	user = <%= print("Your Github Name: "); STDOUT.flush; STDIN.gets.chomp %>
	token = <%= print("Your Github Token: "); STDOUT.flush; STDIN.gets.chomp %>
