# local Home
PATH="$HOME/bin:$PATH"

# Macports
PATH="/opt/local/bin:/opt/local/sbin:$PATH"

# erlware
PATH="/usr/local/erlware/bin:$PATH"

# postgresql
PATH="/opt/local/lib/postgresql83/bin:$PATH"

# Other paths
PATH="/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:/usr/local/git/bin:$PATH"

# liftweb path vars
export M2_HOME=/Applications/liftweb-0.11/apache-maven
export M2=$M2_HOME/bin
export MAVEN_OPTS="-noverify -javaagent:/Applications/liftweb-0.11/java-rebel/javarebel.jar"
PATH=$M2:$PATH

for BIN in $(find $HOME/bin/*/bin  -maxdepth 0); do
  PATH=$PATH:$BIN;
done

export PATH