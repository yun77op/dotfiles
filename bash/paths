# ----------------------------------------------------------------------
# PATH
# ----------------------------------------------------------------------
 
# we want the various sbins on the path along with /usr/local/bin
PATH="/usr/local/bin:$PATH:/usr/local/sbin:/usr/sbin:/sbin"
 
# put ~/bin on PATH if you have it
test -d "$HOME/bin" && PATH="$HOME/bin:$PATH"
 
# put ~/.bin on PATH if you have it
test -d "$HOME/.bin" && PATH="$HOME/.bin:$PATH"

export PATH

# ----------------------------------------------------------------------
# RIP CONFIG
# ----------------------------------------------------------------------

export RIPDIR=$HOME/.rip
export RUBYLIB="$RUBYLIB:$RIPDIR/active/lib"
export PATH="$PATH:$RIPDIR/active/bin"

# ----------------------------------------------------------------------
# MANPATH
# ----------------------------------------------------------------------

case "${OSTYPE}" in
  darwin*)
    # homebrew
    MANPATH="`brew --prefix`/share/man:$MANPATH"
    ;;
  linux*)
    # nothing yet
    ;;
esac

export MANPATH

# ----------------------------------------------------------------------
# MAILCHECK
# ----------------------------------------------------------------------

unset MAILCHECK

# ----------------------------------------------------------------------
# COLORS
# ----------------------------------------------------------------------

export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad

# ----------------------------------------------------------------------
# DISPLAY
# ----------------------------------------------------------------------

test -n "$SSH_TTY" && export DISPLAY=:0.0

# ----------------------------------------------------------------------
# PAGER / EDITOR
# ----------------------------------------------------------------------

# EDITOR
test -n "$(command -v vim)" && EDITOR=vim || EDITOR=vi
export EDITOR
 
# PAGER
if test -n "$(command -v less)" ; then
    PAGER="less -FirSwX"
    MANPAGER="less -FiRswX"
else
    PAGER=more
    MANPAGER="$PAGER"
fi
export PAGER MANPAGER

# ----------------------------------------------------------------------
# HISTORY
# ----------------------------------------------------------------------

# ... and ignore same successive entries.
export HISTCONTROL=ignoreboth

# ----------------------------------------------------------------------
# LANGUAGES
# ----------------------------------------------------------------------

if [ `uname` = "Darwin" ]; then
  # java variables
  export JAVA_HOME='/System/Library/Frameworks/JavaVM.framework/Home'
  export ANT_HOME='/Developer/Java/ant'
  
  # Go language
  export GOROOT=`brew --prefix`/Cellar/go/HEAD
  export GOARCH=amd64
  export GOOS=darwin
fi