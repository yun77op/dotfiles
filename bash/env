 
PATH="/usr/local/bin:$PATH:/usr/local/sbin:/usr/sbin:/sbin"
 
test -d "$HOME/bin" && PATH="$HOME/bin:$PATH"
 
test -d "$HOME/.bin" && PATH="$HOME/.bin:$PATH"

export PATH


export RIPDIR=$HOME/.rip
export RUBYLIB="$RUBYLIB:$RIPDIR/active/lib"
export PATH="$PATH:$RIPDIR/active/bin"


case "${OSTYPE}" in
  darwin*)
    # homebrew
    MANPATH="`brew --prefix`/share/man:$MANPATH"
    ;;
  linux*)
    # nothing yet
    ;;
esac

export MANPATH


unset MAILCHECK


export CLICOLOR=1
export LSCOLORS=ExFxCxDxBxegedabagacad
export LS_COLORS="di=1;;40:ln=1;;40:so=1;;40:pi=1;;40:ex=1;;40:bd=34;46:cd=34;43:su=0;41:sg=0;46:tw=0;42:ow=0;43:"

if test -n "$(command -v gdircolors)"; then
  dircolors=`which gdircolors`
elif test -n "$(command -v dircolors)"; then
  dircolors=`which dircolors`
fi
test -n "$dircolors" && {
  COLORS=/etc/DIR_COLORS
  test -e "/etc/DIR_COLORS.$TERM" && COLORS="/etc/DIR_COLORS.$TERM"
  test -e "$HOME/.dircolors" && COLORS="$HOME/.dircolors"
  test ! -e "$COLORS" && COLORS=
    eval `$dircolors --sh $COLORS`
}
unset dircolors
 

test -n $SSH_CONNECTION && export DISPLAY=:0.0


test -n "$(command -v vim)" && EDITOR=vim || EDITOR=vi
export EDITOR
 
if test -n "$(command -v less)" ; then
    PAGER="less -FirSwX"
    MANPAGER="less -FiRswX"
else
    PAGER=more
    MANPAGER="$PAGER"
fi
export PAGER MANPAGER


export HISTCONTROL=ignoreboth


case "${OSTYPE}" in
  darwin*)
    # java variables
    export JAVA_HOME='/System/Library/Frameworks/JavaVM.framework/Home'
    export PATH="/System/Library/Frameworks/JavaVM.framework/Home/bin:$PATH"
    export ANT_HOME='/Developer/Java/ant'
    export CLASSPATH=$CLASSPATH:/usr/local/Cellar/clojure-contrib/1.1.0/clojure-contrib.jar
    
    # Go language
    export GOROOT=`brew --prefix`/Cellar/go/HEAD
    export GOARCH=amd64
    export GOOS=darwin
    ;;
  linux*)
    # actually ubuntu specific
    export JAVA_HOME='/usr/lib/jvm/java-6-sun'
    export PATH="/usr/lib/jvm/java-6-sun/bin:$PATH"
    ;;
esac
