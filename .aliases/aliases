# ----------------------------------------------------------------------
# GREP
# ----------------------------------------------------------------------

alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

# ----------------------------------------------------------------------
# SVN
# ----------------------------------------------------------------------

alias svnprop='svn propset svn:keywords Id,Source,Author,HeadURL,Revision,Date'

# ----------------------------------------------------------------------
# MISC
# ----------------------------------------------------------------------

alias cp='cp -R'
test -n "$(command -v lftp)" && alias ftp='lftp'
test -n "$(command -v less)" && alias more='less -RciqMSj5'
test -n "$(command -v vim)"  && alias vi='vim'
alias ec='emacsclient -n'
alias lines='wc -l'
alias 'h?'='history | grep -i'
alias 'ps?'='ps ax | grep -i'

m () {
  mkdir -p $1 && cd $1
}

# ----------------------------------------------------------------------
# LS
# ----------------------------------------------------------------------

alias l='ls -lAhF'
if test -n "$(command -v ls++)"; then
  alias ll='LC_ALL=en_US.UTF-8 LANG=en ls++'
else
  alias ll='ls -alF'
fi
alias la='ls -A'
alias lsd='ls -d *(-/DN)'
alias lrt='ls -lrt'
alias recent='ls -lAt | head'

# ----------------------------------------------------------------------
# RAILS
# ----------------------------------------------------------------------

test -n "$(command -v rails)" && {
  alias rails.sc='(test -d script && ((test -n "$(script/rails)" && script/rails console) || (test -n "$(script/console)" && script/console))) || echo "not a rails app"'
  alias rails.ss='(test -d script && ((test -n "$(script/rails)" && script/rails server) || (test -n "$(script/server)" && script/server))) || echo "not a rails app"'
  alias rails.pss='RAILS_ENV=production ss'
  alias rails.sg='(test -d script && ((test -n "$(script/rails)" && script/rails generate) || (test -n "$(script/generate)" && script/generate))) || echo "not a rails app"'
  alias rails.tlog='tail -f log/development.log'
  alias rails.scaffold='script/generate nifty_scaffold'
  alias rails.migrate='rake db:migrate db:test:clone'
  alias rails.rst='touch tmp/restart.txt'
}

# ----------------------------------------------------------------------
# CURL
# ----------------------------------------------------------------------

alias xmlget="curl -X GET -H 'Accept: application/xml'"
alias jsonget="curl -X GET -H 'Accept: application/json'"
alias xmlpost="curl -X POST -H 'Accept: application/xml'"
alias xmlput="curl -X PUT -H 'Accept: application/xml'"
alias xmldelete="curl -X DELETE -H 'Accept: application/xml'"

# ----------------------------------------------------------------------
# POSTGRESQL
# ----------------------------------------------------------------------

test -n "$(command -v postgres)" && {
  export PG_DIR="/usr/local/var/db/postgres"
  alias pg.create="sudo su postgres -c 'initdb $PG_DIR'"
  alias pg.kill="sudo su postgres -c 'pg_ctl stop -m immediate -D $PG_DIR'"
  alias pg.restart="sudo su postgres -c 'pg_ctl restart -l logfile -D $PG_DIR'"
  alias pg.start="sudo su postgres -c 'pg_ctl start -l logfile -D $PG_DIR'"
  alias pg.stop="sudo su postgres -c 'pg_ctl stop -s -m fast -D $PG_DIR'"
  # convert data output to csv
  alias pg2csv='psql -F\; -A --pset footer'
}

# ----------------------------------------------------------------------
# JAVA ALIASES
# ----------------------------------------------------------------------

# Mozilla rhino found at ftp://ftp.mozilla.org/pub/mozilla.org/js
alias js='java -cp "$HOME/lib/js.jar:$HOME/lib/jline.jar" \
  org.mozilla.javascript.tools.shell.Main'
alias cljc='java -cp "$HOME/lib/clojure.jar:$HOME/lib/jline.jar" \
  jline.ConsoleRunner clojure.main'
alias cssembed="java -jar $HOME/lib/cssembed-0.3.2.jar"
alias bsh='java -cp "$HOME/lib/bsh-core.jar:$HOME/lib/jline.jar" \
  jline.ConsoleRunner bsh.Interpreter'

# ----------------------------------------------------------------------
# RELOAD
# ----------------------------------------------------------------------

case $SHELL in
  *bash)
    alias reload='. ~/.bashrc'
    ;;
  *zsh)
    alias reload='. ~/.zshrc'
    ;;
esac

# ----------------------------------------------------------------------
# PLATEFORM SPECIFIC
# ----------------------------------------------------------------------

case "${OSTYPE}" in
  darwin*)
    . ~/.aliases/darwin_aliases
    ;;
  linux*)
    . ~/.aliases/linux_aliases
    ;;
esac
