#!/bin/sh

# http://www.mail-archive.com/tmux-users@lists.sourceforge.net/msg00703.html
while true
do
  killall -SIGWINCH tmux
  sleep 3
done &

tmux attach || tmux new

# session="$(whoami)@$(hostname)"
# 
# tmux new-session -d -s1
# tmux new-window -t1:1 -n 'audiobook' 'cd "$HOME/Documents/audiobook/"'
# tmux new-window -t1:2 -n 'ktulu' 'cd "$HOME/src/ktu/lu"'
# tmux select-window -t1:1
# tmux -2 attach-session -t1

wait
