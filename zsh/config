PS1='%n@%m:%d$(git_info_for_prompt)
âžœ '

fpath=(~/.zsh/functions $fpath)

autoload -U ~/.zsh/functions/*(:t)
autoload -U colors && colors
autoload -U compinit && compinit

HISTFILE=~/.history
HISTSIZE=1000
SAVEHIST=1000

# -------------------------------------------------------------------
# MAN ZSHOPTIONS
# -------------------------------------------------------------------

setopt NO_BG_NICE # don't nice background tasks
setopt NO_HUP
setopt NO_LIST_BEEP
setopt LOCAL_OPTIONS # allow functions to have local options
setopt LOCAL_TRAPS # allow functions to have local traps
setopt SHARE_HISTORY # share history between sessions ???
setopt EXTENDED_HISTORY # add timestamps to history
setopt PROMPT_SUBST
setopt CORRECT
setopt COMPLETE_IN_WORD
setopt PRINT_EXIT_VALUE # Print the exit value of programs with non-zero exit status.

# -------------------------------------------------------------------
# HISTORY
# -------------------------------------------------------------------

setopt APPEND_HISTORY                   # adds history
setopt INC_APPEND_HISTORY SHARE_HISTORY # adds history incrementally and share it across sessions
setopt HIST_IGNORE_ALL_DUPS             # don't record dupes in history
setopt HIST_REDUCE_BLANKS
setopt HIST_IGNORE_SPACE                # If a line starts with a space, don't save it.
setopt HIST_NO_STORE
setopt HIST_VERIFY
setopt HIST_SAVE_NO_DUPS
setopt HIST_EXPIRE_DUPS_FIRST
setopt HIST_FIND_NO_DUPS

zle -N newtab

# -------------------------------------------------------------------
# KEY BINDING
# -------------------------------------------------------------------

bindkey "^[[5D" backward-word # iTerm can't read it
bindkey "^[[5C" forward-word  # iTerm can't read it
bindkey "^[[5~" up-line-or-history
bindkey "^[[6~" down-line-or-history
bindkey "^[[H"  beginning-of-line
bindkey "^[[F"  end-of-line
bindkey "^[[3~" delete-char
bindkey "^[^N"  newtab
bindkey "^[[Z"  reverse-menu-complete
bindkey "\e[B"  history-search-forward
bindkey "\e[A"  history-search-backward
bindkey " "     magic-space   # also do history expansion on space
bindkey "^A"    beginning-of-line
bindkey "^E"    end-of-line
bindkey "^H"    backward-delete-word
bindkey "^I"    complete-word # complete on tab, leave expansion to _expand
bindkey "^J"    accept-line
bindkey "^K"    kill-line
bindkey "^K^K"  kill-whole-line
bindkey "^L"    clear-screen
bindkey "^M"    accept-line
bindkey "^R"    redisplay
bindkey "^U"    vi-kill-line
bindkey "^V"    quoted-insert
