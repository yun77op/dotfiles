# local Home
PATH="$HOME/bin:/usr/local/bin:/usr/local/sbin:/usr/local/mysql/bin:\
/usr/local/git/bin:$HOME/.gem/ruby/1.8/bin:$PATH"

MANPATH="/usr/local/man:/usr/local/mysql/man:/usr/local/git/man:$MANPATH"

case "${OSTYPE}" in
  darwin*)
    # homebrew
    PATH=`brew --prefix`/bin:$PATH
    MANPATH=`brew --prefix`/share/man:$MANPATH
    # macports
    PATH="/opt/local/bin:/opt/local/sbin:$PATH"
    ;;
  linux*)
    # nothing yet
    ;;
esac

# postgresql
PATH="/opt/local/lib/postgresql83/bin:$PATH"

for BIN in $(find $HOME/bin/*/bin  -maxdepth 0); do
  PATH="$BIN:$PATH"
done

export PATH
export MANPATH